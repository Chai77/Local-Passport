<% if(authenticated) { %>
    <h1>You are authenticated <%= username %></h1>
    <% if(errorMessage !== "") { %>
        <h4><%= errorMessage %></h4>
    <% } %>
    <form action="/logout" method="post">
        <input type="submit" value="Logout">
    </form>
<% } else { %>
    <h1>You aren't authenticated</h1>
    <a href='/login'>Login</a>
<% } %>